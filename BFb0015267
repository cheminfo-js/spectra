        googletag.cmd.push(function() {
                googletag.pubads().setTargeting("doi","10.1007-BFb0015267");
                googletag.pubads().setTargeting("pmc",["I","I16005","I24032"]);
                googletag.pubads().setTargeting("BPID",["2000161090","3000189246","3000590661","3991445888"]);
                googletag.pubads().setTargeting("edition","academic");
                googletag.pubads().setTargeting("sucode","SUCO11645");
                googletag.pubads().setTargeting("eisbn","978-3-540-49435-5");
                googletag.pubads().setTargeting("eissn","1611-3349");
                googletag.pubads().setTargeting("pisbn","978-3-540-60105-0");
                googletag.pubads().setTargeting("pissn","0302-9743");
                googletag.pubads().setTargeting("ksg",Krux.segments);
                googletag.pubads().setTargeting("kuid",Krux.uid);
                googletag.pubads().setTargeting("logged","N");
            googletag.pubads().enableSingleRequest();
            googletag.pubads().enableAsyncRendering();
            googletag.enableServices();
        });
    </script>

        
